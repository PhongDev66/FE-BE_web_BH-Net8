@model IEnumerable<ProductModel>
@{
    ViewData["title"] = "List Product";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Danh sách sản phẩm</h3>

    <a class="btn btn-primary" asp-action="Create" asp-controller="Product">Thêm</a>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên</th>
                <th>Số lượng</th>
                <th>Đã bán</th>
                <th>Mô tả</th>
                <th>Giá</th>
                <th>Giá Vốn</th>
                <th>Ảnh</th>
                <th>Loại Sản Phẩm</th>
                <th>Danh mục</th>
                <th>Thương hiệu</th>    
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td><b>@item.Quantity</b><br /><a asp-controller="Product" asp-action="AddQuantity" asp-route-Id="@item.Id">Thêm số lượng</a></td>
                    <td><b>@item.Sold</b></td>
                    <td>@Html.Raw(@item.Description)</td>
                    <td>@item.Price.ToString("#,##0 VNĐ")</td>
                    <td>@item.CapitalPrice.ToString("#,##0 VNĐ")</td>
                    <td> <img src="~/media/products/@item.Image" width="100%"  /> </td> @* width="120px" height="150px" *@
                    <td> @item.Slug </td>
                    <td> @item.Category.Name </td>
                    <td> @item.Brand.Name </td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Sửa</a>
                        <a class="btn btn-danger btn-sm confirmDeletion" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Xoá</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>
