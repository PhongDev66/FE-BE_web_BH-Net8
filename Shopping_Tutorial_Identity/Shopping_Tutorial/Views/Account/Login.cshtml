@model LoginViewModel
@{
    ViewData["title"] = "Login";
}

<section>
	<!--form-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8 col-sm-offset-1">
				<div class="login-form">
					<!--login form-->
					<h2>Đăng Nhập Tài Khoản Của Bạn</h2>
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<form asp-action="Login" asp-controller="Account">

						<div class="form-group">
							<label>Tên Đầy Đủ</label>
							<input asp-for="Username" class="form-control"> </input>
							<span asp-validation-for="Username" class="text-danger"></span>
						</div>

						<div class="form-group">
							<label>Mật Khẩu</label>
							<input asp-for="Password" class="form-control"> </input>
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<button class="btn btn-default">Đăng Nhập</button>
						@* <a asp-action="LoginGoogle" asp-controller="Account">Đăng Ký Tài Khoản Mới</a><br /> *@
						<a asp-action="Create" asp-controller="Account">Đăng Ký Tài Khoản Mới</a><br />
						<a asp-action="ForgetPass" asp-controller="Account">Quên Mật Khẩu</a>
					</form>
				</div><!--/login form-->
			</div>
			
			
		</div>
	</div>
</section>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
